<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seminegro">


    <ImageView
        android:id="@+id/guia7"
        android:layout_width="350dp"
        android:layout_height="560dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondoguias" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-32dp"
        android:text="Atrás"
        android:backgroundTint="@color/naranja"
        app:layout_constraintBottom_toBottomOf="@+id/guia7"
        app:layout_constraintEnd_toEndOf="@+id/guia7"
        app:layout_constraintStart_toStartOf="@+id/guia7" />

    <TextView
        android:id="@+id/titulo_guia7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Cerrar sesión"
        android:textColor="@color/amarillo"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/guia7"
        app:layout_constraintStart_toStartOf="@+id/guia7"
        app:layout_constraintTop_toTopOf="@+id/guia7" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/guia7"
        app:layout_constraintEnd_toEndOf="@+id/guia7"
        app:layout_constraintStart_toStartOf="@+id/guia7"
        app:layout_constraintTop_toTopOf="@+id/guia7">


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>