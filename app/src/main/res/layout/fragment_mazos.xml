<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cartas"
    tools:context=".Cartas_fragment">

    <TextView
        android:layout_width="292dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:background="#BC089E13"
        android:backgroundTint="#23AF0B"
        android:gravity="left"
        android:paddingStart="15dp"
        android:text="Menu Mazos"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"  />

    <include
        layout="@layout/fragment_noticias"
        android:id="@+id/fragment_noticias"
        android:visibility="invisible"
        tools:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/fragment_summons"
        android:id="@+id/fragment_summons"
        android:visibility="invisible"
        tools:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        layout="@layout/menuinferior2"
        android:id="@+id/fragment_menu_inferior"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/mazofondo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>