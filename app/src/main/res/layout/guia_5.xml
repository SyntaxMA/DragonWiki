<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/seminegro">


    <ImageView
        android:id="@+id/guia5"
        android:layout_width="350dp"
        android:layout_height="560dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/fondoguias" />

    <Button
        android:id="@+id/cerrarguias5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-32dp"
        android:backgroundTint="@color/naranja"
        android:text="AtrÃ¡s"
        app:layout_constraintBottom_toBottomOf="@+id/guia5"
        app:layout_constraintEnd_toEndOf="@+id/guia5"
        app:layout_constraintStart_toStartOf="@+id/guia5" />

    <TextView
        android:id="@+id/titulo_guia5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Noticias y summons"
        android:textColor="@color/amarillo"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/guia5"
        app:layout_constraintStart_toStartOf="@+id/guia5"
        app:layout_constraintTop_toTopOf="@+id/guia5" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/guia5"
        app:layout_constraintEnd_toEndOf="@+id/guia5"
        app:layout_constraintStart_toStartOf="@+id/guia5"
        app:layout_constraintTop_toTopOf="@+id/guia5">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/texto1_guias5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="El apartado de noticias y summons esta \n vinculado con nuestra base de datos, en ella \nse reflejaran las noticias que vayan saliendo \na lo largo de todo el tiempo, igual que lo hace el \njuego original en su apartado correspondiente."
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/texto2_guias5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:text="Para ver estos apartados ve al menu de inicio \npulsa en la capsula y apareceran 2 botones \n cada uno corresponde con una categoria \n de articulos diferentes dado su enfoque \n (noticias o summons). "
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/texto1_guias5" />

                <ImageView
                    android:id="@+id/guia_capsula"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/texto2_guias5"
                    app:srcCompat="@drawable/guiacapsula" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>